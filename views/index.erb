<!DOCTYPE html>
<html>
    <head>
        <title>Opportunity List</title>
		<link href="/stylesheets/style.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
		<h2>Opportunities for <span id="displayname">User Name</span></h2>
		<form action="/action" method="post">
			<input type="submit" id="new" name="new" value="New" />
		</form>
		<table class="accountlist">
		  <% if @opportunities && @opportunities['records'] %>
		    <% @opportunities['records'].each do |record| %>
			    <tr><td><a href="detail?id=<%= record['Id'] %>"><%= record['Name'] %></a></td></tr>
        <% end %>
      <% else %>
		    <%= @opportunities.inspect %>
      <% end %>
		</table>
		<br/>
		<a href="logout" id="logout">Logout</a>
	</body>
</html>