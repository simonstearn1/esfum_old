<div class="container">
  <div id="offset" style="width: 1000px; height:60px"></div>
  <div id="opportunityListChart" class="ui-widget ui-widget-content ui-corner-all" style="width: 1000px; height: 800px"></div>
  <div class="header">
    <h2>Daily Summary Table</h2>
  </div>
  <div class="main demo">
    <!-- Begin main markup -->
    <table id="opportunitylist" style="width: 1000px">
      <caption>
        Number of edits per day by user (Opportunities only)
      </caption>
      <thead>
      <tr>
        <th>
          User
        </th>
        <th>
          Date
        </th>
        <th>
          Edit Count
        </th>
      </tr>
      </thead>

      <tbody>
      <% end_date = Date.new(Time.now.year, Time.now.month, Time.now.day)
         @user_list.each do | user |
           today = @earliest_date
           while (today <= end_date)  do
             record = @data[[today, user]] %>
              <tr>
                <th scope="row">
                  <%= user.to_s %>
                </th>
                <td>
                  <%= today.to_s %>
                </td>
                <td>
                  <%= record.to_s %>
                </td>
              </tr>
        <%   today += 1
           end
         end %>
      </tbody>
    </table>
    <!-- End  markup -->
  </div>
  <div class="footer">
    <p>
      Data taken from salesforce.com at <%= DateTime.now().to_s %>. </p>
  </div>
